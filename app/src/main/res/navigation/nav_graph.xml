<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/DetailArticleFragment"
        android:name="com.example.newsproject.presentation.second.DetailArticleFragment"
        tools:layout="@layout/fragment_second">
        <argument
            android:name="data"
            app:argType="com.example.newsproject.data.models.Doc" />
        <action
            android:id="@+id/action_DetailArticleFragment_to_descriptionBottomSheetDialog"
            app:destination="@id/descriptionBottomSheetDialog" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.newsproject.presentation.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_DetailArticleFragment"
            app:destination="@id/DetailArticleFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.newsproject.presentation.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_DetailArticleFragment"
            app:destination="@id/DetailArticleFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.newsproject.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_DetailArticleFragment"
            app:destination="@id/DetailArticleFragment" />
    </fragment>
    <dialog
        android:id="@+id/descriptionBottomSheetDialog"
        android:name="com.example.newsproject.presentation.second.bottomSheet.DescriptionBottomSheetDialog"
        android:label="DescriptionBottomSheetDialog" >
        <argument
            android:name="sheet"
            app:argType="com.example.newsproject.data.models.Doc" />
    </dialog>
</navigation>